{
    "version": "0.2.0",
    "configurations":
    [
        {
            "name": "debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "D:/gcc/bin/gdb.exe",
            "cwd": "${workspaceFolder}/build",
            "environment":
            [
                {
                    "name": "PATH",
                    "value": "%PATH%;D:/gcc/bin/"
                }
            ],
        }
    ]
}
